section.token#token
    .container 
        h2.title
            span.green NCT
            sapn(data-lang="token-title") – УПРАВЛЯЮЩИЙ токен пРОЕКТА
        ul 
            li
                span.title-grey(data-lang="token-list-1")  Общий запас:
                span 1 000 000 000 
                span.green NCT
            li
                span.title-grey(data-lang="token-list-2") Для покупки доступно:
                span 50 000 000 
                span.green NCT
            li
                span.title-grey(data-lang="token-list-3") Стоимость NCT:
                span 0,15 
                span.blue USD
        .exchanger
            .label(data-lang="token-exchange-title") Amount:
            .input 
                input(type="number", value="50000", name="nct", onkeyup="updateUSDTAmount()", onchange="updateUSDTAmount()", min="50000")
                span.green NCT
            p.hint(data-lang="token-exchange-hint") Min 7500 USDT
            .input
                input(type="number", value="7500", name="usdt", onkeyup="updateNCTAmount()", onchange="updateNCTAmount()", min="7500" step="150")
                span.blue USDT
            button(onclick="buyNCT()")
                span(data-lang="token-exchange-btn") Buy
                //- span buy nct
                +picture("./img/token/btn__arrow", ['png', 'webp'])
        .img
            +picture("./img/token/bg", ['png', 'webp'])
