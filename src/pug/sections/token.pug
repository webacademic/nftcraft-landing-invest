section.token   
    .container 
        h2.title NCT – УПРАВЛЯЮЩИЙ токен пРОЕКТА 
        ul 
            li Общий запас: 
                span 50 000 000 NCT
                +image('token/list-icon-1')
            li Для покупки доступно: 
                span 2 500 000 NCT
                +image('token/list-icon-2')
            li Стоимость NCT: 
                span 0,15 USD
                +image('token/list-icon-3')
        .exchanger
            .label Amount:
            .input 
                input.nct(type="number", value="1000", name="nct")
                span NCT
            .input
                input(type="number", value="1000", name="ucdt")
                span USDT
            button() 
                span buy nct
                +image('token/btn__arrow')
        .img 
            +image('token/bg')